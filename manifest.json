{
  "manifest_version": 3,
  "name": "Reader View",
  "description": "Safari-like reader view that extracts the main article and shows it in a clean, themeable layout.",
  "version": "1.0.3",
  "action": {
    "default_title": "Toggle Reader Mode",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "256": "icons/icon256.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["readability.js", "contentScript.js"],
      "css": ["reader.css"],
      "run_at": "document_idle"
    }
  ]
}
